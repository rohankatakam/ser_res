{
  "version": "1.2",
  "name": "Blended Scoring",
  "description": "2-stage pipeline with semantic similarity + quality + recency blended scoring",
  "created_at": "2026-02-05",
  "embedding_strategy_version": "1.0",
  "embedding_model": "text-embedding-3-small",
  "embedding_dimensions": 1536,
  "requires_schema": "1.0",
  "required_fields": [
    "id",
    "title",
    "scores",
    "key_insight",
    "published_at"
  ],
  "optional_fields": [
    "series",
    "categories",
    "content_id",
    "entities",
    "people"
  ],
  "default_parameters": {
    "credibility_floor": 2,
    "combined_floor": 5,
    "freshness_window_days": 90,
    "candidate_pool_size": 150,
    "user_vector_limit": 10,
    "weight_similarity": 0.55,
    "weight_quality": 0.30,
    "weight_recency": 0.15,
    "credibility_multiplier": 1.5,
    "recency_lambda": 0.03,
    "engagement_weights": {
      "bookmark": 2.0,
      "listen": 1.5,
      "click": 1.0
    }
  }
}
